<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="147dp"
            android:layout_height="141dp" app:srcCompat="@drawable/opencolortransparentlogo"
            android:id="@+id/imgOC"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="338dp"
            android:layout_height="69dp" app:srcCompat="@drawable/opencolortext"
            android:id="@+id/imgOpenColor"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.17000002" app:layout_constraintTop_toTopOf="@+id/imgOC"
            android:contentDescription="@string/app_name" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAuthor" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imgOC"
            app:layout_constraintVertical_bias="0.04000002"
            android:textStyle="bold" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/begin_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTest"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/imgBtnTest"
            app:layout_constraintEnd_toEndOf="@+id/imgBtnTest" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.01999998"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnTest"
            android:textSize="12sp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/camera"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:id="@+id/imgBtnCamera"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.83" android:contentDescription="@string/camera"
            app:layout_constraintVertical_bias="0.9" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPicture" app:layout_constraintStart_toStartOf="@+id/imgBtnCamera"
            app:layout_constraintEnd_toEndOf="@+id/imgBtnCamera" app:layout_constraintTop_toBottomOf="@+id/imgBtnCamera"
            app:layout_constraintVertical_bias="0.01999998"
            android:textStyle="bold" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"/>
    <ImageView
            android:layout_width="67dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/testicon"
            android:adjustViewBounds="true"
            android:maxHeight="80dp"
            android:maxWidth="100dp"
            android:id="@+id/imgBtnTest"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/begin_test" app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.9" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.88"
            app:layout_constraintTop_toTopOf="@+id/imgOC"/>
    <TextView
            android:text="@string/choose_option_below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBegin" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/txtAuthor"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.7"
            android:textSize="22sp" android:textStyle="bold"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sample_color"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:maxWidth="300dp"
            android:id="@+id/imgColor"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgOpenColor" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.13" android:contentDescription="@string/app_name"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sample_grayscale"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:maxWidth="300dp"
            android:id="@+id/imgGrayscale"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgOpenColor" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.13" android:contentDescription="@string/app_name"/>
    <ImageView
            android:layout_width="332dp"
            android:layout_height="5dp" app:srcCompat="@drawable/black_line"
            android:id="@+id/imgBlackLine1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgGrayscale"
            app:layout_constraintBottom_toTopOf="@+id/txtBegin" android:contentDescription="@string/app_name"/>
    <ImageView
            android:layout_width="332dp"
            android:layout_height="5dp" app:srcCompat="@drawable/black_line"
            android:id="@+id/imgBlackLine2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgGrayscale"
            app:layout_constraintBottom_toTopOf="@+id/txtBegin" app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintVertical_bias="0.759" android:contentDescription="@string/app_name"/>
    <ImageView
            android:layout_width="332dp"
            android:layout_height="5dp" app:srcCompat="@drawable/black_line"
            android:id="@+id/imgBlackLine3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgGrayscale"
            app:layout_constraintBottom_toTopOf="@+id/txtBegin" app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintVertical_bias="0.25" android:contentDescription="@string/app_name"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/black_circle"
            android:id="@+id/imgBlackCircleBot"
            app:layout_constraintEnd_toEndOf="@+id/imgBlackLine2"
            app:layout_constraintTop_toTopOf="@+id/imgBlackLine2"
            app:layout_constraintBottom_toBottomOf="@+id/imgBlackLine2"
            app:layout_constraintStart_toStartOf="@+id/imgBlackLine2" app:layout_constraintHorizontal_bias="0.58"
            android:contentDescription="@string/app_name"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/black_circle"
            android:id="@+id/imgBlackCircleTop"
            app:layout_constraintEnd_toEndOf="@+id/imgBlackLine3"
            app:layout_constraintTop_toTopOf="@+id/imgBlackLine3"
            app:layout_constraintBottom_toBottomOf="@+id/imgBlackLine3"
            app:layout_constraintStart_toStartOf="@+id/imgBlackLine3" android:layout_marginTop="34dp"
            app:layout_constraintVertical_bias="0.84000003" app:layout_constraintHorizontal_bias="0.58"
            android:contentDescription="@string/app_name"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/black_circle"
            android:id="@+id/imgBlackCircleMid"
            app:layout_constraintStart_toStartOf="@+id/imgBlackLine1"
            app:layout_constraintEnd_toEndOf="@+id/imgBlackLine1"
            app:layout_constraintTop_toTopOf="@+id/imgBlackLine1"
            app:layout_constraintBottom_toBottomOf="@+id/imgBlackLine1" app:layout_constraintHorizontal_bias="0.35"
            android:contentDescription="@string/app_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>