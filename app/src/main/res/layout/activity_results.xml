<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Results">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvResults"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imgSample"
    />
    <TextView
            android:text="Just an idea: If the user has a color vision deficiency, as a test, they can adjust the sample
image below to enhance a certain color. If the user has no deficiency, the image will be the fully colored version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnHome"
            app:layout_constraintVertical_bias="0.37"/>
    <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnTryOwnImage"
            app:layout_constraintTop_toBottomOf="@+id/imgSample"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="335dp"
            android:layout_height="283dp" app:srcCompat="@drawable/sample_grayscale"
            android:id="@+id/imgSample"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/tvResults"
    />
    <Button
            android:text="@string/try_your_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTryOwnImage" app:layout_constraintStart_toEndOf="@+id/btnHome"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgSample"/>
</androidx.constraintlayout.widget.ConstraintLayout>